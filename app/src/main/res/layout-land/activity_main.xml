<?xml version="1.0" encoding="utf-8"?>
<!-- Everything here is the same as the other file just changed for a landscape viewing
    The new buttons will be marked -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- textview is explained on portrait file sheet as its the exact same -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="0dp"
        android:textSize="80sp"
        android:id="@+id/number"
        android:textAlignment="textEnd"
        android:textStyle="bold"/>
    <!-- all of these buttons are explained on the portrait file sheet -->
    <Button
        android:id ="@+id/clear"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/number"
        android:background="@drawable/btn_file"
        android:text="@string/clear"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />

    <Button
        android:id="@+id/posorneg"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/number"
        android:layout_toRightOf="@id/clear"
        android:background="@drawable/btn_file"
        android:text="@string/negorpos"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />

    <Button
        android:id="@+id/percent"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/number"
        android:layout_toRightOf="@id/posorneg"
        android:background="@drawable/btn_file"
        android:text="@string/percent"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />

    <Button
        android:id = "@+id/divide"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/number"
        android:layout_toRightOf="@id/percent"
        android:background="@drawable/btn_file"
        android:text="@string/divide"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/seven"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/clear"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/seven"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/eight"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/clear"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:layout_toRightOf="@id/seven"
        android:text="@string/eight"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/nine"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/clear"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/nine"
        android:layout_toRightOf="@id/eight"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/clear"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/multipy"
        android:layout_toRightOf="@id/nine"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/four"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/seven"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/four"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/five"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/seven"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/five"
        android:layout_toRightOf="@id/four"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/six"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/seven"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/six"
        android:layout_toRightOf="@id/five"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/subtract"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/seven"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/subtract"
        android:layout_toRightOf="@id/six"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/one"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/one"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/two"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/two"
        android:layout_toRightOf="@id/one"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/three"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/three"
        android:layout_toRightOf="@id/two"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/add"
        android:layout_toRightOf="@id/three"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <!-- Look at comment above zero in the portait file sheet -->
    <Button
        android:id="@+id/zero"
        android:layout_width="342dp"
        android:layout_height="40dp"
        android:layout_below="@id/one"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/zero"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/decimal"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/one"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/decimal"
        android:layout_toRightOf="@id/zero"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/equals"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/one"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/equals"
        android:layout_toRightOf="@id/decimal"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <!-- Everything under here is buttons only used in landscape mode -->
    <Button
        android:id="@+id/sin"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/number"
        android:background="@drawable/btn_file"
        android:text="@string/sin"
        android:layout_toRightOf="@id/divide"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/cos"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/clear"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/cos"
        android:layout_toRightOf="@id/multiply"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/tan"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/seven"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/tan"
        android:layout_toRightOf="@id/subtract"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/log"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/log10"
        android:layout_toRightOf="@id/add"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/ln"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/one"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_file"
        android:text="@string/ln"
        android:layout_toRightOf="@id/equals"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"/>

</RelativeLayout>